<!--Formulário para a alteração dos dados-->
<form action="/postagens/update" method="POST">

{{#each posts}}

<p> Código: </p>
<input type="text" name="id" value="{{id}}" readonly="true">

<br> 

<p> Título: </p>
<input type="text" name="titulo" value="{{titulo}}">

<br>

<p> Contéudo: </p>
<textarea name="conteudo"> {{conteudo}} </textarea>

<p> Código do usuário: </p>
<input type="text" name="id" value="{{fk_user}}" readonly="true">

<br> <br>

<input type="submit" value="Alterar">
<hr>

{{/each}}

</form>